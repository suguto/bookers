<h1>Editing Book</h1>

<% if @book.errors.any? %>
<h2>2 errors prohibited this book from being saved:</h2>
<ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
</ul>
<% end %>

<%= form_with model:@book do |b| %>
<label>Title</label>
<%= b.text_field:title %>

<br>

<label>Body</label>
<%= b.text_area:body %>

<br>

<%= b.submit "Update Book" %>
<% end %>

<%= link_to "show",book_path(@book) %>
